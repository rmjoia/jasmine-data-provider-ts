{
  "compilerOptions": {
    "noImplicitAny": true,
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES2015",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["ES2015", "DOM"],
    "rootDir": "lib",
    "types": ["jasmine"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "dist", "tests"]
}
